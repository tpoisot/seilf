*
  margin: 0px 0px
  padding: 0px 0px
  box-sizing: padding-box

html, body
  font-family: 'Noto Sans UI', sans-serif
  margin: 0px 0px !important
  padding: 0px 0px !important
  height: 100%
  min-height: 100%


#bar
  padding: 20px
  background-color: rgb(63, 154, 205)
  color: white
  min-height: 100%
  width: 35%
  position: fixed
  #footer
    position: absolute
    bottom: 20px

#main
  color: rgb(83, 83, 83)
  width: 65%
  right: 0px
  position: absolute
  top: 0px

// All lists are unstyled
ul, li
  list-style: none

li#entry
  font-style: 20px
  line-height: 25px
  height: 50px !important
  margin-bottom: 20px
  padding: 10px
  &:hover
    color: rgb(0, 0, 0)

#main
  .title
    font-weight: bold
    white-space: nowrap
    overflow: hidden
    display: block
    text-overflow: ellipsis
  .in
    font-style: italic
  .id
    font-family: "Hack", monospace
    float: right
    color: rgb(164, 164, 164)

#infobox
  span
    margin-bottom: 25px
    display: block
  .author
    text-transform: lowercase;
    font-variant: small-caps;
  .title
    font-weight: 100
    font-size: 30px
  .in
    font-weight: bold
  .id
    font-family: "Hack", monospace

#search
  background-color: rgb(230, 230, 230)
  position: fixed
  bottom: 0
  right: 0
  display: block
  width: 65%
  padding: 20px
  input
    border: 0px solid white
    background-color: transparent
    width: 100%
