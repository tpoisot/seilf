@import url("https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic&subset=latin,greek");
@import url("https://fonts.googleapis.com/css?family=Roboto+Mono:400,100italic,100,300,300italic,400italic,500,500italic,700,700italic&subset=latin,greek");

sans = "Roboto", sans-serif
mono = "Roboto Mono", monospace

colorSideBar = white
colorTopBar = #2980b9
colorTopBarElement = white
colorOtherUIElement = #3498db
colorActive = lighten(#f1c40f, 95%)
colorShadow = rgb(210, 210, 210)
colorShadowActive = rgb(143, 143, 143)
colorBackground = rgb(252, 252, 252)
colorMainText = rgb(71, 71, 71)

buttonwidth = 80px
barwidth = 5 * buttonwidth

*
  margin: 0px 0px
  padding: 0px 0px
  box-sizing: padding-box
  font-family: sans

html, body
  font-family: sans, sans-serif
  margin: 0px 0px !important
  padding: 0px 0px !important
  height: 100%
  min-height: 100%
  background-color: colorBackground

#top
  background-color: colorTopBar
  color: colorTopBarElement
  width: 100%
  height: 60px
  position: fixed
  top: 0
  left: 0
  z-index: 999999
  #buttons
    a
      &:visited
        color: none
    span
      padding: 20px
      color: colorTopBarElement
      width: buttonwidth
      display: inline-block
      text-align: center
      &:hover
        background-color: darken(colorTopBar, 20%)
  #search
    display: inline-block
    height: 60px
    width: 50%
    .fa
      color: lighten(colorTopBar, 50%)
      text-align: center
      width: buttonwidth
    input
      border: 0px solid white
      background-color: transparent
      color: colorSideBar
      size: 50% !important
      &:focus
        color colorTopBarElement

#bar
  color: colorMainText
  width: barwidth
  height: 100%
  padding-top: 60px
  position: fixed
  z-index: 10
  #footer
    position: absolute
    bottom: 0px
    padding: 20px

#main
  color: rgb(83, 83, 83)
  width: 100%
  padding-left: barwidth
  right: 0px
  position: absolute
  top: 0px

// All lists are unstyled
ul, li
  list-style: none

ul#entries
  padding-top: 60px

li.entry
  font-size: 15px
  line-height: 20px
  padding: 10px
  background-color: white
  border-left: 1px solid colorShadow
  border-bottom: 1px solid colorShadow
  color: colorMainText
  &:hover
    background-color: colorBackground
    color: black
    .inlist
      color: colorShadowActive
  .inlist
    float: left
    width: 40px
    height: 40px
    font-size: 20px
    line-height: 40px
    margin-right: 10px
    color: colorShadow

#main
  .title
    font-weight: bold
    white-space: nowrap
    overflow: hidden
    display: block
    text-overflow: ellipsis
  .in
    font-style: italic
  .id
    font-family: mono, monospace
    float: right
    color: colorOtherUIElement

.active
  background-color: colorActive !important

#infobox
  padding: 20px
  font-size: 14px
  a
    border-bottom: 1px dashed colorOtherUIElement
    color: black
    text-decoration: none
    &:hover
      border-bottom: 1px solid colorOtherUIElement
  span
    margin-bottom: 25px
    display: block
    clear: both
  .fa
    color: colorOtherUIElement
    margin-right: 10px
  .author
    text-transform: lowercase;
    font-variant: small-caps;
    display: inline-block !important
    margin-right: 30px
  .title
    font-weight: 300
    font-size: 20px
    line-height: 25px
  .in
    font-weight: 500
  .id, .doi, .url
    font-family: mono, monospace
  .id
    font-weight: bold
  .crossrefResult
    margin: 10px 0px
    a
      border: none
      color: colorTopBar
      font-weight: bold
      &:hover
        border: none
        color: lighten(colorTopBar, 50%)
